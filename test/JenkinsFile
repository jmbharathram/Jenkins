pipeline {
    agent {
        docker {
            image 'alpine:3.14'
            args '--user root -v /var/run/docker.sock:/var/run/docker.sock'
        }
    }
    stages {
        stage('Checkout') {
            steps {
                git url: 'git@github.com:jmbharathram/SpringAPI.git',
                    credentialsId: 'git-ssh-cred'
            }
        }
    }
}
